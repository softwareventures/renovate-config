{
  "name": "@softwareventures/renovate-config",
  "version": "0.0.0-development",
  "description": "Standard renovate configuration for Software Ventures Limited",
  "keywords": [
    "renovate"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/renovate-config",
  "bugs": "https://github.com/softwareventures/renovate-config/issues",
  "repository": "github:softwareventures/renovate-config",
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@softwareventures/semantic-release-config": "1.1.1",
    "cz-conventional-changelog": "3.3.0",
    "re2": "1.15.9",
    "renovate": "25.12.7",
    "semantic-release": "17.4.2"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "common": {
      "description": "Common rules shared by @softwareventures:lib and @softwareventures:app",
      "extends": [
        ":automergeBranch",
        ":semanticCommits",
        ":maintainLockFilesWeekly"
      ],
      "baseBranches": [
        "main",
        "master",
        "alpha",
        "beta",
        "next",
        "next-major"
      ],
      "github-actions": {
        "enabled": true
      },
      "pin": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "automerge": true,
          "matchUpdateTypes": [
            "minor",
            "patch"
          ]
        },
        {
          "automerge": true,
          "matchManagers": [
            "gradle-wrapper"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch"
          ]
        },
        {
          "matchManagers": [
            "npm"
          ],
          "matchPackagePatterns": [
            "^@types/",
            "^@softwareventures/",
            "^@dcgw/",
            "^dictionary-types$",
            "^promise-ponyfill$",
            "^i32$",
            "^u32$",
            "^semantic-release-s3-upload$",
            "^snyk$",
            "^tslib$",
            "^typescript$",
            "^is-integer-in-range$",
            "^preact$",
            "^aws-sdk$",
            "^postcss$",
            "^jsdom$",
            "^get-stream$",
            "^webpack$",
            "^dotenv$"
          ],
          "automerge": true,
          "matchUpdateTypes": [
            "minor",
            "patch"
          ]
        },
        {
          "matchManagers": [
            "gradle"
          ],
          "matchPackagePatterns": [
            "^com.android.tools.build:"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch"
          ],
          "automerge": true
        }
      ],
      "prCreation": "not-pending",
      "postUpdateOptions": [
        "npmDedupe",
        "yarnDedupeHighest"
      ]
    },
    "pinOnlyDevDependencies": {
      "description": "Pin dependency versions for <code>devDependencies</code> and widen others",
      "packageRules": [
        {
          "matchPackagePatterns": [
            "*"
          ],
          "rangeStrategy": "widen"
        },
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "rangeStrategy": "pin"
        }
      ]
    },
    "pinAllExceptPeerDependencies": {
      "description": "Widen <code>peerDependencies</code>, pin everything else",
      "packageRules": [
        {
          "matchPackagePatterns": [
            "*"
          ],
          "rangeStrategy": "pin"
        },
        {
          "matchDepTypes": [
            "engines",
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
      ]
    },
    "lib": {
      "description": "Standard Renovate rules for Software Ventures libraries (any language)",
      "extends": [
        "@softwareventures:common",
        "@softwareventures:pinOnlyDevDependencies"
      ],
      "packageRules": [
        {
          "matchDepTypes": [
            "dependencies"
          ],
          "semanticCommitType": "chore",
          "automerge": true,
          "major": {
            "semanticCommitType": "fix",
            "automerge": false
          }
        },
        {
          "matchDepTypes": [
            "dependencies"
          ],
          "matchCurrentVersion": "<1",
          "semanticCommitType": "fix",
          "automerge": false,
          "matchUpdateTypes": [
            "minor"
          ]
        }
      ]
    },
    "app": {
      "description": "Standard Renovate rules for Software Ventures applications (any language)",
      "extends": [
        "@softwareventures:common",
        "@softwareventures:pinAllExceptPeerDependencies"
      ],
      "packageRules": [
        {
          "matchDepTypes": [
            "dependencies"
          ],
          "semanticCommitType": "fix"
        }
      ]
    },
    "common-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "common-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    },
    "js-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "js-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    },
    "rust-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "rust-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
