{
  "name": "@softwareventures/renovate-config",
  "version": "0.0.0-development",
  "description": "Standard renovate configuration for Software Ventures Limited",
  "keywords": [
    "renovate"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/renovate-config",
  "bugs": "https://github.com/softwareventures/renovate-config/issues",
  "repository": "github:softwareventures/renovate-config",
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.2.0",
    "re2": "1.15.0",
    "renovate": "21.21.2",
    "semantic-release": "17.1.1"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "common": {
      "description": "Common rules shared by @softwareventures:lib and @softwareventures:app",
      "extends": [
        ":automergeBranchPush",
        ":semanticCommits",
        ":maintainLockFilesWeekly"
      ],
      "pin": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true
        },
        {
          "managers": [
            "npm"
          ],
          "packageRules": [
            {
              "packagePatterns": [
                "^@types/",
                "^@softwareventures/",
                "^dictionary-types$",
                "^promise-ponyfill$",
                "^i32$",
                "^u32$",
                "^semantic-release-s3-upload$",
                "^snyk$",
                "^tslib$",
                "^typescript$",
                "^is-integer-in-range$",
                "^preact$",
                "^aws-sdk$"
              ],
              "updateTypes": [
                "minor",
                "patch"
              ],
              "automerge": true
            }
          ]
        },
        {
          "managers": [
            "gradle-wrapper"
          ],
          "updateTypes": [
            "minor",
            "patch"
          ],
          "automerge": true
        }
      ],
      "prCreation": "not-pending",
      "postUpdateOptions": [
        "npmDedupe",
        "yarnDedupeHighest"
      ]
    },
    "pinOnlyDevDependencies": {
      "description": "Pin dependency versions for <code>devDependencies</code> and widen others",
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "rangeStrategy": "widen"
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "pin"
        }
      ]
    },
    "pinAllExceptPeerDependencies": {
      "description": "Widen <code>peerDependencies</code>, pin everything else",
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "rangeStrategy": "pin"
        },
        {
          "depTypeList": [
            "engines",
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
      ]
    },
    "lib": {
      "description": "Standard Renovate rules for Software Ventures libraries (any language)",
      "extends": [
        "config:js-lib",
        "@softwareventures:common",
        "@softwareventures:pinOnlyDevDependencies"
      ],
      "packageRules": [
        {
          "depTypeList": [
            "dependencies"
          ],
          "separateMinorPatch": true,
          "semanticCommitType": "chore",
          "automerge": true,
          "major": {
            "semanticCommitType": "fix",
            "automerge": false
          }
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "matchCurrentVersion": "<1",
          "updateTypes": [
            "minor"
          ],
          "semanticCommitType": "fix",
          "automerge": false
        }
      ]
    },
    "app": {
      "description": "Standard Renovate rules for Software Ventures applications (any language)",
      "extends": [
        "config:js-app",
        "@softwareventures:common",
        "@softwareventures:pinAllExceptPeerDependencies"
      ],
      "lockFileMaintenance": {
        "semanticCommitType": "fix"
      }
    },
    "common-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "common-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    },
    "js-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "js-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    },
    "rust-lib": {
      "description": "Obsolete, use @softwareventures:lib instead",
      "extends": [
        "@softwareventures:lib"
      ]
    },
    "rust-app": {
      "description": "Obsolete, use @softwareventures:app instead",
      "extends": [
        "@softwareventures:app"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
