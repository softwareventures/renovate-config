{
  "name": "@softwareventures/renovate-config",
  "version": "0.0.0-development",
  "description": "Standard renovate configuration for Software Ventures Limited",
  "keywords": [
    "renovate"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/renovate-config",
  "bugs": "https://github.com/softwareventures/renovate-config/issues",
  "repository": "github:softwareventures/renovate-config",
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.1.0",
    "re2": "1.10.5",
    "renovate": "19.141.1",
    "semantic-release": "17.0.4"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "@softwareventures:js-lib"
      ]
    },
    "common": {
      "extends": [
        ":automergeBranchPush",
        ":semanticCommits",
        ":maintainLockFilesWeekly"
      ],
      "pin": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true
        },
        {
          "packagePatterns": [
            "^@types/",
            "^@softwareventures/",
            "^dictionary-types$",
            "^promise-ponyfill$",
            "^i32$",
            "^u32$",
            "^semantic-release-s3-upload$"
          ],
          "updateTypes": [
            "minor",
            "patch"
          ],
          "automerge": true
        }
      ],
      "prCreation": "not-pending",
      "travis": {
        "enabled": true
      }
    },
    "common-lib": {
      "extends": [
        "@softwareventures:common",
        ":pinOnlyDevDependencies"
      ],
      "packageRules": [
        {
          "depTypeList": [
            "dependencies"
          ],
          "rangeStrategy": "update-lockfile",
          "separateMinorPatch": true,
          "semanticCommitType": "chore",
          "automerge": true,
          "major": {
            "semanticCommitType": "fix",
            "automerge": false
          }
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "matchCurrentVersion": "<1",
          "updateTypes": [
            "minor"
          ],
          "semanticCommitType": "fix",
          "automerge": false
        }
      ]
    },
    "common-app": {
      "extends": [
        "@softwareventures:common",
        ":pinAllExceptPeerDependencies"
      ],
      "lockFileMaintenance": {
        "semanticCommitType": "fix"
      }
    },
    "js-lib": {
      "extends": [
        "config:js-lib",
        "@softwareventures:common-lib"
      ]
    },
    "js-app": {
      "extends": [
        "config:js-app",
        "@softwareventures:common-app"
      ],
      "postUpdateOptions": [
        "npmDedupe",
        "yarnDedupeHighest"
      ]
    },
    "rust-lib": {
      "extends": [
        "@softwareventures:common-lib"
      ]
    },
    "rust-app": {
      "extends": [
        "@softwareventures:common-app"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
