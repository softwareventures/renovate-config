{
  "name": "@softwareventures/renovate-config",
  "version": "0.0.0-development",
  "description": "Standard renovate configuration for Software Ventures Limited",
  "keywords": [
    "renovate"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/renovate-config",
  "bugs": "https://github.com/softwareventures/renovate-config/issues",
  "repository": "github:softwareventures/renovate-config",
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "test": "echo No tests yet",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "semantic-release": "15.13.3"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "@softwareventures:js-lib"
      ]
    },
    "common": {
      "extends": [
        ":automergeBranchPush"
      ],
      "devDependencies": {
        "automerge": true
      },
      "pin": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "packagePatterns": [
            "^@types/"
          ],
          "updateTypes": [
            "minor",
            "patch"
          ],
          "automerge": true
        }
      ],
      "prCreation": "not-pending",
      "travis": {
        "enabled": true
      }
    },
    "js-lib": {
      "extends": [
        "config:js-lib",
        "@softwareventures:common"
      ],
      "dependencies": {
        "rangeStrategy": "update-lockfile",
        "separateMinorPatch": true,
        "patch": {
          "semanticCommitType": "chore",
          "automerge": true
        }
      }
    },
    "js-app": {
      "extends": [
        "config:js-app",
        "@softwareventures:common"
      ],
      "postUpdateOptions": [
        "npmDedupe",
        "yarnDedupeHighest"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
